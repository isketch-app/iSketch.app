@page "/Administration/{PageName}";
@page "/Administration/{PageName}/{PageNumber:int}";
@page "/Administration/{PageName}/{OID}";
@page "/Administration/{PageName}/{PageNumber:int}/{OID}";

<Authorized PermissionsA="PMA.Administration">
    @if (PageName == "Words")
    {
        <Words PageNumber="@PageNumber" WordID="@OID" />
    }

    @if (PageName == "Users")
    {
        <Users PageNumber="@PageNumber" UserID="@OID" />
    }

    @if (PageName == "Difficulties")
    {
        <Difficulties PageNumber="@PageNumber" DifficultyID="@OID" />
    }

    @if (PageName == "BannedWords")
    {
        <BannedWords PageNumber="@PageNumber" BID="@OID" />
    }

    @if (PageName == "Sessions")
    {
        <Sessions PageNumber="@PageNumber" SessionID="@OID" />
    }
</Authorized>

<Authorized PermissionsA="PMA.Administration" Invert="true">
    <PageError ReturnTo="/Administration" Emoji="👮" Message="You do not have permissions to perform this action." />
</Authorized>

@code {
    [Parameter]
    public string PageName { get; set; }
    [Parameter]
    public int PageNumber { get; set; }
    [Parameter]
    public string OID { get; set; }
}