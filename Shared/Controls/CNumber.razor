<Control Icon="@Icon" Label="@Label">
    <input @onchange="OnChange" value="@Value" type="number" />
</Control>

@code {
    [Parameter]
    public string Label { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }
    [Parameter]
    public string Value {
        get
        {
            return rValue;
        }
        set
        {
            if (int.TryParse(value, out int num))
            {
                rValue = num.ToString();
            }
            else
            {
                rValue = "0";
            }
        }
    }
    private string rValue = "0";
    private async Task OnChange(ChangeEventArgs e)
    {
        if (int.TryParse((string)e.Value, out int num))
        {
            Value = num.ToString();
            await ValueChanged.InvokeAsync(num.ToString());
        }
        else
        {
            Value = "0";
            await ValueChanged.InvokeAsync("0");
        }
    }
} 