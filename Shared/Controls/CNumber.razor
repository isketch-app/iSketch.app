<Control Icon="@Icon" Label="@Label">
    <input @bind-value="Value" type="number" />
</Control>

@code {
    [Parameter]
    public string Label { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Value
    {
        get
        {
            return ValueGS;
        }
        set
        {
            if(int.TryParse(value, out int num))
            {
                ValueGS = num.ToString();
            }
            else
            {
                ValueGS = "0";
            }
            StateHasChanged();
        }
    }
    private string ValueGS = "0";
} 