@inject IJSRuntime js;

<button id="@ID" class="CButton" @onclick="CButtClick">
    <span>@Icon</span>
    <span>@ChildContent</span>
    <div class="load">
        <span></span>
    </div>
</button>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    private string ID = "x" + Guid.NewGuid().ToString();
    private async void CButtClick(MouseEventArgs e)
    {
        await OnClick.InvokeAsync(e);
        await js.InvokeVoidAsync("eval", "document.getElementById('" + ID + "').classList.remove('clicked');");
    }
}